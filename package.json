{
  "name": "git-summary-ai",
  "version": "1.0.0",
  "description": "A CLI tool that pushes code with AI-generated commit summaries to help team code reviews",
  "main": "dist/index.js",
  "bin": {
    "git-summary-ai": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "ai",
    "commit",
    "summary",
    "cli",
    "claude",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.3.2",
    "openai": "^4.77.0",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
