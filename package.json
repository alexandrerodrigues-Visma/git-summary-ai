{
  "name": "@alexandrerodrigues-visma/git-summary-ai",
  "version": "0.2.5",
  "description": "A CLI tool that pushes code with AI-generated commit summaries to help team code reviews",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "dist/index.js",
  "bin": {
    "git-summary-ai": "dist/index.js",
    "gitai": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "npm run validate && tsup",
    "build:quick": "tsup",
    "validate": "npm run typecheck && npm run lint && npm run test:run",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:strict": "eslint src --max-warnings 0",
    "prepare": "npm run build",
    "version:major": "node scripts/bump-version.js major",
    "version:minor": "node scripts/bump-version.js minor",
    "version:patch": "node scripts/bump-version.js patch",
    "package": "npm run build && npx @yao-pkg/pkg dist/index.cjs -o ./releases/git-summary-ai --out-path ./releases",
    "package:win": "npm run build && npx @yao-pkg/pkg dist/index.cjs --target node20-win-x64 -o ./releases/git-summary-ai-win.exe",
    "package:mac": "npm run build && npx @yao-pkg/pkg dist/index.cjs --target node20-macos-x64 -o ./releases/git-summary-ai-macos",
    "package:linux": "npm run build && npx @yao-pkg/pkg dist/index.cjs --target node20-linux-x64 -o ./releases/git-summary-ai-linux",
    "package:all": "npm run build && npx @yao-pkg/pkg dist/index.cjs --target node20-win-x64,node20-macos-x64,node20-linux-x64 --out-path ./releases"
  },
  "keywords": [
    "git",
    "ai",
    "commit",
    "summary",
    "cli",
    "claude",
    "openai",
    "github",
    "code-review",
    "automation"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Alexandre Rodrigues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexandrerodrigues-Visma/git-summary-ai.git"
  },
  "bugs": {
    "url": "https://github.com/alexandrerodrigues-Visma/git-summary-ai/issues"
  },
  "homepage": "https://github.com/alexandrerodrigues-Visma/git-summary-ai#readme",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@google/generative-ai": "^0.24.1",
    "@octokit/rest": "^22.0.1",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^17.2.3",
    "inquirer": "^10.2.2",
    "keytar": "^7.9.0",
    "open": "^11.0.0",
    "openai": "^6.17.0",
    "ora": "^9.1.0",
    "simple-git": "^3.27.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "@yao-pkg/pkg": "^6.12.0",
    "eslint": "^9.39.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "pkg": {
    "scripts": "dist/index.cjs",
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-linux-x64"
    ],
    "outputPath": "releases"
  }
}
